<h1>Buuuurgggs!</h1>

<h2>Burgers not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}">
		Devoured
	</button>

	<button class="delete-burger" data-id="{{this.id}}">EWWW! DELETE!</button>
</li>

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
	{{burger_name}}

	{{!-- <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button> --}}

	<button class="delete-burger" data-id="{{this.id}}">EWWW! DELETE!</button>
</li>

    {{/if}}
  {{/each}}
</ul>

